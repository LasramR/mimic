{  
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/LasramR/orca/orcarc.schema.json",
  "title": "orcarc",
  "description": "Configuration file for Orca CLI",
  "type": "object",

  "properties": {
    "$schema": {
      "type": "string"
    },
    "git": {
      "description": "Git integration",
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "main_branch": {
          "description": "The main branch of the newly initialize git project",
          "type": "string"
        }
      },
      "required": ["enabled"],
      "additionalProperties": false
    },
    "template": {
      "description": "Template things",
      "type": "object",
      "properties": {
        "variables": {
          "description": "",
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "description": { 
                "type": "string"
              },
              "type": {
                "type": "string",
                "enum": ["string", "number", "boolean", "regex", "choice"]
              },
              "item": {
                "description": "type qualifier"
              },
              "required": { 
                "type": "boolean"
              }
            },
            "required": ["type"],
            "allOf": [
              {
                "if": {
                  "properties": { "type": { "const": "regex" } }
                },
                "then": {
                  "required": ["item"],
                  "properties": {
                    "item": {
                      "type": "string"
                    }
                  }
                }
              },
              {
                "if": {
                  "properties": { "type": { "const": "choice" } }
                },
                "then": {
                  "required": ["item"],
                  "properties": {
                    "item": {
                      "type": "array",
                      "items": "string",
                      "minItems": 1
                    }
                  }
                }
              }
            ]
          }
        }
      },
      "required": [],
      "additionalProperties": false
    },
    "hooks": {
      "description": "Post installation instructions to trigger after template injection",
      "type": "array",
      "items": {
        "description": "",
        "type": "object",
        "properties": {
          "name": {
            "description": "",
            "type": "string"
          },
          "when": {
            "description": "",
            "type": "string",
            "enum": ["pre_template_injection", "post_template_injection"]
          },
          "steps": {
            "description": "",
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "ignore_error": {
            "description": "",
            "type": "boolean"
          },
          "ignore_user_skip": {
            "description": "",
            "type": "boolean"
          }
        },
        "required": ["when", "steps"],
        "additionalProperties": false
      },
      "additionalProperties": false
    }
  },
  "required": [],
  "additionalProperties": false
}